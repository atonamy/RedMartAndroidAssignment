<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1" android:id="@+id/catalog_row">

    <android.support.v7.widget.CardView
        android:id="@+id/product_item1"
        android:layout_width="0dp"
        android:layout_height="@dimen/catalog_cell_height"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:foreground="?attr/selectableItemBackground"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/productItemBackground"
            >

            <ImageView
                android:id="@+id/product_item1_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/catalog_image_size"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"/>



            <TextView
                android:id="@+id/product_item1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_item1_image"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text=""
                android:ellipsize="none"
                android:singleLine="false"
                android:textColor="@color/productItemPreviewTitle"
                android:textSize="@dimen/text_title_size"
                android:maxLines="2"
                android:layout_weight="1"
                android:scrollHorizontally="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:textColor="@color/colorMeasure"
                android:textSize="@dimen/text_addon_size"
                android:id="@+id/product_item1_measure"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/productItemPreviewTitle"
                android:textSize="@dimen/text_addon_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/product_item1_price_new"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/product_item1_price_new"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_addon_size"
                android:id="@+id/product_item1_promo_price_new"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/price_space"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/product_item2"
        android:layout_width="0dp"
        android:layout_height="@dimen/catalog_cell_height"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:foreground="?attr/selectableItemBackground"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/productItemBackground"
            >


            <ImageView
                android:id="@+id/product_item2_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/catalog_image_size"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"/>



            <TextView
                android:id="@+id/product_item2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_item2_image"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text=""
                android:ellipsize="none"
                android:singleLine="false"
                android:textColor="@color/productItemPreviewTitle"
                android:textSize="@dimen/text_title_size"
                android:maxLines="100"
                android:layout_weight="1"
                android:scrollHorizontally="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:textColor="@color/colorMeasure"
                android:textSize="@dimen/text_addon_size"
                android:id="@+id/product_item2_measure"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/productItemPreviewTitle"
                android:textSize="@dimen/text_addon_size"
                android:id="@+id/product_item2_price_new"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/product_item2_price_new"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_addon_size"
                android:id="@+id/product_item2_promo_price_new"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/price_space"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel_small"
        wheel:matProg_barColor="@color/colorAccent"
        wheel:matProg_progressIndeterminate="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/smallProgress"
        android:layout_height="@dimen/smallProgress"
        />

</RelativeLayout>